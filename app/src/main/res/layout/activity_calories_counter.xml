<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.artur.aehr.CaloriesCounterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Typ aktywności"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView14"
        android:layout_toStartOf="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spalone kalorie"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:layout_below="@+id/radioGroup2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktualna prędkość"
        android:id="@+id/textView7"
        android:textSize="20dp"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Srednia prędkość"
        android:id="@+id/textView8"
        android:textSize="20dp"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Przebyty dystans"
        android:id="@+id/textView9"
        android:textSize="20dp"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Czas trwania aktywności"
        android:id="@+id/textView10"
        android:textSize="20dp"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:id="@+id/radioGroup2"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Bieganie/Chodzenie"
            android:id="@+id/radioButton3"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Rower"
            android:id="@+id/radioButton4"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Rolki"
            android:id="@+id/radioButton5"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 kcal"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 km/h"
        android:id="@+id/textView12"
        android:textSize="35dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 km/h"
        android:id="@+id/textView13"
        android:textSize="35dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 km"
        android:id="@+id/textView14"
        android:textSize="35dp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00h00m00s"
        android:id="@+id/textView15"
        android:textSize="35dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Licz"
        android:id="@+id/button"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignBottom="@+id/radioGroup2"
        android:layout_toRightOf="@+id/radioGroup2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="35sp"
        android:textStyle="normal"
        android:onClick="activityRecording"/>
</RelativeLayout>
